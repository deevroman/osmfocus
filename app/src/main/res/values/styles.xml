<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
    </style>

    <style name="ExceptionDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.MaterialComponents.Light" />

    <style name="SettingsListItemIconOverlay">
        <item name="cornerSize">50%</item>
    </style>

    <style name="SettingsListItemIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="shapeAppearanceOverlay">@style/SettingsListItemIconOverlay</item>
        <item name="android:background">@color/colorSecondary</item>
        <item name="tint">@color/colorOnSecondary</item>
        <item name="contentPadding">5dp</item>
    </style>

</resources>
